<odoo>
	<data>
		<record id="view_service_provider_form" model="ir.ui.view">
	      <field name="name">service.provider.form</field>
	      <field name="model">service.provider</field>
	      <field name="arch" type="xml">
	        <form string="Service Provider">
	          <group>
	            <field name="name"/>
	          </group>
	        </form>
	      </field>
	    </record>


	    <record id="view_service_provider_list" model="ir.ui.view">
		    <field name="name">service.provider.list</field>
		    <field name="model">service.provider</field>
		    <field eval="8" name="priority"/>
		    <field name="arch" type="xml">
		      <tree string="Service Provider">
		        <field name="name"/>
		      </tree>
		    </field>
	    </record>

	    <record model="ir.actions.act_window" id="open_view_service_provider_form" >
	      <field name="name">Service Provider</field>
	      <field name="res_model">service.provider</field>
	      <field name="view_type">form</field>
	      <field name="view_mode">tree,form</field>
	    </record>


        <menuitem
            id="menu_view_service_provider_form"
            parent="hr.menu_human_resources_configuration"
            name = "Service Provider"
            sequence="3"
            action="open_view_service_provider_form"/>

	</data>
</odoo>