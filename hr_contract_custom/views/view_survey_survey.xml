<odoo>
    <record id="survey_form_view_extended" model="ir.ui.view">
        <field name="name">survey.form.view.extended</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[2]" position="after">
                <group>
                    <group>
                        <field name="category" required="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>