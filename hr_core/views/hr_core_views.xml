<odoo>
    <data>


        <record id="view_hr_department_form_inherited" model="ir.ui.view">
            <field name="name">hr.department.form.inherited</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="type"/>
                    <field name="code" readonly="1"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </field>
            </field>
        </record>


        <record id="view_hr_job_form_inherited" model="ir.ui.view">
            <field name="name">hr.job.form.inherited</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <button name="action_get_attachment_tree_view" position="before">
                    <button name="action_open_contracts"
                            class="oe_stat_button"
                            icon="fa-book"
                            type="object"
                            context="{'active_test': False}"
                            attrs="{'invisible': [('contract_count', '=', 0)]}">
                        <field name="contract_count" widget="statinfo" string="Contracts"/>
                    </button>
                    <button name="action_open_offers"
                            class="oe_stat_button"
                            icon="fa-paste"
                            type="object"
                            context="{'active_test': False}"
                            attrs="{'invisible': [('offer_count', '=', 0)]}">
                        <field name="offer_count" widget="statinfo" string="Offers"/>
                    </button>
                </button>
                <field name="department_id" position="replace">
                    <field name="group" context="{'default_type': 'BU'}"/>
                    <field name="department_id" context="{'default_type': 'BD','default_parent_id':group}"/>
                    <field name="section" context="{'default_type': 'BS','default_parent_id':department_id}"/>
                    <field name="subsection" context="{'default_type': 'SS','default_parent_id':section}"/>
                    <field name="job_grade"/>
                    <field name="job_title"/>
                    <field name="position_status"/>
                    <field name="isco_code"/>
                    <field name="cost_center"/>
                </field>
                <field name="no_of_recruitment" position="after">
                    <field name="create_date"/>
                    <field name="default_manager"/>
                    <field name="panel_ids" widget="many2many_tags"/>
                </field>
                <sheet position="inside">
                    <group string="Compensations" name="compensations">
                        <field nolabel="1" name="related_compensations">
                            <tree editable="bottom">
                                <field name="is_payroll"/>
                                <field name="state"/>
                                <field name="name"/>
                                <field name="component_description"
                                       attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                <field name="value" attrs="{'readonly':[('is_payroll','=',True)]}"/>
                                <field name="amount" attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                <field name="currency" attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                <field name="amount_type" attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                <field name="frequency"/>
                                <field name="period"/>
                                <field name="compensation_id" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>

            </field>
        </record>

        <record model="ir.ui.view" id="job_grade_form">
            <field name="name">Job Grade Form</field>
            <field name="model">job.grade</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="level"/>
                            <field name="notice_period"/>
                            <field name="probation_period"/>
                        </group>
                        <group string="Compensations" name="compensations">
                            <field nolabel="1" name="related_compensations">
                                <tree editable="bottom">
                                    <field name="is_payroll"/>
                                    <field name="state"/>
                                    <field name="name"/>
                                    <field name="component_description"
                                           attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                    <field name="value" attrs="{'readonly':[('is_payroll','=',True)]}"/>
                                    <field name="min_amount" attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                    <field name="mid_amount" attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                    <field name="max_amount" attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                    <field name="currency" attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                    <field name="amount_type" attrs="{'readonly':[('is_payroll','=',False)]}"/>
                                    <field name="frequency"/>
                                    <field name="period"/>
<!--                                    <field name="compensation_id" readonly="1" force_save="1"/>-->
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


