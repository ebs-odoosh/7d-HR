<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="welcome_email_letter_to_all_company" model="mail.template">
            <field name="name">Welcome Announcements</field>
            <field name="email_from">"${object.company_id.name | safe}" &lt;${(object.company_id.email or user.email) | safe}&gt;</field>
            <field name="subject">Welcome Announcements</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="body_html" type="xml">
                <table border="0" cellpadding="0" cellspacing="0"
                       style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td
                        align="center">
                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                           style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                        <tbody>
                            <!-- HEADER -->
                            <tr>
                                <td align="center" style="min-width: 590px;">
                                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                                           style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                        <tr>
                                            <td valign="middle" colspan="2">
                                                <span style="font-size: 10px;">Date :
                                                    ${format_date(datetime.datetime.today().date())}</span><br/>
                                                <div style="font-size: 20px; font-weight: bold; text-align:center">
                                                    WELCOME ANNOUNCEMENTS
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td valign="middle" colspan="2">
                                                <div>
                                                    <img src="/web/image/hr.employee/${object.id}/image_128"
                                                         alt="Avatar"
                                                         style="vertical-align:baseline;width: 80px; height: 80px; object-fit: cover; display: block; margin:10px auto;"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <!-- CONTENT -->
                            <tr>
                                <td align="center" style="min-width: 590px;">
                                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                                           style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                        <tr>
                                            <td valign="top" style="font-size: 13px;">
                                                <div>
                                                    <p>Dear All, </p>
                                                    <br/>
                                                    <p>We are pleased to announce that
                                                        % if object.gender == 'male':
                                                        % set employee_name = 'Mr. '
                                                        % elif object.gender == 'female':
                                                        % set employee_name = 'Miss. '
                                                        % else:
                                                        % set employee_name =''
                                                        % endif
                                                        ${employee_name}${object.name}, will be joining our organization
                                                        as ${object.job_title} reporting ${object.parent_id.name}.
                                                        <br/>
                                                        <br/>
                                                        Please join me in welcoming ${employee_name}${object.name} to
                                                        our team.
                                                        ${employee_name} Will bring to our organization over
                                                        ${object.contract_id.applicant_id.total_years_of_exp} years of
                                                        professional experience in the oil and gas industry.
                                                        <br/>
                                                        <br/>
                                                        We are very excited to have ${employee_name}${object.name} as
                                                        part of our team.
                                                        You are all requested to provide full support to
                                                        ${employee_name}${object.name}
                                                        <br/>
                                                    </p>
                                                    <br/>
                                                    <p>Best regards,</p>
                                                    <strong>CEO</strong>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
                </tr>
                </table>
            </field>
            <field name="lang">${object.user_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
        <record id="welcome_email_letter_to_new_employee" model="mail.template">
            <field name="name">Welcome aboard</field>
            <field name="email_from">"${object.company_id.name | safe}" &lt;${(object.company_id.email or user.email) | safe}&gt;</field>
            <field name="email_to">
                ${object.work_email or object.department_id.manager_id.work_email}</field>
            <field name="subject">Welcome aboard</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="body_html" type="xml">
                <table border="0" cellpadding="0" cellspacing="0"
                       style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td
                        align="center">
                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                           style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                        <tbody>
                            <!-- HEADER -->
                            <tr>
                                <td align="center" style="min-width: 590px;">
                                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                                           style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                        <tr>
                                            <td valign="middle" colspan="2">
                                                <span style="font-size: 10px;">Date :
                                                    ${format_date(datetime.datetime.today().date())}</span><br/>
                                                <div style="font-size: 20px; font-weight: bold; text-align:center">
                                                    Welcome aboard
                                                </div>
                                            </td>
                                        </tr>

                                    </table>
                                </td>
                            </tr>
                            <!-- CONTENT -->
                            <tr>
                                <td align="center" style="min-width: 590px;">
                                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                                           style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                        <tr>
                                            <td valign="top" style="font-size: 13px;">
                                                <div>
                                                    % if object.gender == 'male':
                                                    % set employee_name = 'Mr. '
                                                    % elif object.gender == 'female':
                                                    % set employee_name = 'Miss. '
                                                    % else:
                                                    % set employee_name =''
                                                    % endif
                                                    <p>Dear ${employee_name}${object.name}, </p>
                                                    <br/>
                                                    <p>
                                                        Congratulations on joining our team! We hope we can work well
                                                        together and share many successes!
                                                        <br/>
                                                    </p>
                                                    <br/>
                                                    <p>Best regards,</p>
                                                    <strong>${object.company_id.name}</strong>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
                </tr>
                </table>
            </field>
            <field name="lang">${object.user_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
