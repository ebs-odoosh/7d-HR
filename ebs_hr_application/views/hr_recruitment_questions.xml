<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_recruitment_questions_form">
            <field name="name">hr_recruitment_questions_form</field>
            <field name="model">hr.recruitment.questions</field>
            <field name="arch" type="xml">
                <form string="Question">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Answers">
                            <field name="answer_ids" widget="one2many" readonly="1" nolabel="1">
                                <tree create="0" delete="0" editable="0">
                                    <field name="application_id"/>
                                    <field name="answer"/>
                                    <field name="details"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>
