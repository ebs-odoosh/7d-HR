                                <!--                                <th>Claimed Amount</th>-->
                                <!--                                <td>-->
                                <!--                                    <span t-field="terms_fees_line.claimed_amount"/>-->
                                <!--                                </td>-->
                                <!--                            </tr>-->
                                <!--                            <tr>-->
                                <!--                                <th>Approve Amount</th>-->
                                <!--                                <td>-->
                                <!--                                    <span t-field="terms_fees_line.approve_amount"/>-->

                                <!--                                </td>-->
                                <!--                            </tr>-->
                                <!--                        </t>-->
                                <!--                    </t>-->
                                <!--                </table>-->
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
