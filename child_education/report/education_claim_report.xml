                                <!--                                <th>Terms &amp; Fees</th>-->
                                <!--                                <td>-->
                                <!--                                    <span t-esc="terms_fees_line.terms_and_fees_name()"/>-->
                                <!--                                </td>-->
                                <!--                            </tr>-->
