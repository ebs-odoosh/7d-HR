                                <!--                                    <th>Child Name</th>-->
                                <!--                                    <td>-->
                                <!--                                        <b>-->
                                <!--                                            <span t-field="child_line.child_id.name"/>-->
                                <!--                                            <t t-set="counter" t-value="2"/>-->
                                <!--                                        </b>-->
                                <!--                                    </td>-->
                                <!--                                </tr>-->
                                <!--                            </t>-->
